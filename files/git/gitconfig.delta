[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	features = decorations
	line-numbers = true
	navigate = true
	#whitespace-error-style = 22 reverse

[delta "decorations"]
	commit-decoration-style = bold yellow box

[merge]
	conflictstyle = diff3

[diff]
	colorMoved = default
